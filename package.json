{
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "e2e:build:ios": "detox build -c ios.sim.debug",
    "e2e:test:ios": "detox test -c ios.sim.debug",
    "e2e:build:android": "detox build -c android.emu.debug",
    "e2e:test:android": "detox test -c android.emu.debug",
    "prepare": "husky install",
    "validate": "npm run typecheck && npm run lint:check && npm run format:check && npm run test -- --watchAll=false"
  },
  "dependencies": {
    "expo": "^54.0.10",
    "expo-status-bar": "^3.0.8",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/detox": "^18.1.3",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.16",
    "@types/react-native": "^0.72.8",
    "detox": "^20.42.0",
    "typescript": "^5.9.2"
  }
}
